extends ../_template

block variables
	- var title = 'Обо мне'

block content	
	.main-wrapper
		.overlay#open
			a(href="#").hamburger-close
			+menu-no-blank('overlay-menu', {'Мои работы': 'works.html', 'Блог': 'blog.html', 'Обо мне': 'about.html', 'Авторизация': '/#authorize'})
		header.header
			.portfolio
				+icon('portfolio_header')
			.header__socials
				.socials.socials--floatleft
					+socials("socials", socials)
			.header__hamburger
				a(href="#open").hamburger
					+icon('hamburger')
			.header__about
				.about
					.about__avatar
						img(class="about__img" src="assets/img/avatar.jpg" alt="avatar")
					h1.about__author Корепанов Иван
						.about__text Личный сайт веб разработчика
			a(href="#next").header__arrow-down
				+icon('arrow_down')

		section.section-about#next
			.section-about__page.section-about__page--left
				.section-about__page-wrapper
					h2.title-about.title-about--big Обо мне
						.about-page__bg
							+icon('about_header')
					.section-about__img
						img(class="about__img" src="assets/img/avatar.jpg" alt="avatar")
					.title-about Кто я
					p.
						Я веб разработчик из Москвы. Мне 29 лет. Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты.
					p.
						Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
			.section-about__page.section-about__page--right
				h2.title-about.title-about--short Чем я могу быть вам полезен
				p.
					Больше всего меня привлекет Frontend разработка, но я также знаком и могу решать не сложные задачи на Backend. Но давайте по порядку.

				.skills
					+chart(['HTML5','CSS3','JavaScript & jQuery'], 'Frontend')
					+chart(['PHP','MySQL','Node.js & npm','Mongo.db'], 'Backend')
					+chart(['Git','Gulp','Bower'], 'WorkFlow')
	

				//- var Backend WorkFlow

			section.section-contacts
				.contacts-map
					img(src="assets/img/map.jpg", alt="map" )
					.contacts-map__marker
						+icon('map_marker')

				- var icons = ['skype', 'envelope', 'phone', 'map_marker']
				- var links = ['skype:xenolitheone', 'mailto:moskovanin@yandex.ru', 'tel:+7 931 200 93 24', 'https://www.google.ru/maps/@55.7900315,37.5614709,15z']
				- var items = ['xenolitheone', 'moskovanin@yandex.ru', '+7 931 200 93 24', 'Москва, м. Динамо']
				.contacts
					.title-about.title-about--contacts Контакты
					+contacts-menu("contacts-list", icons, links, items)


	footer.main-footer
		.black-footer
			.black-footer__item
				p.black-footer__text Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. 
			.black-footer__item
				.black-footer__menu
					+menu("black-footer-menu", {'Мои работы': 'works.html', 'Обо мне': 'about.html', 'Блог': 'blog.html', 'Авторизация': '/#authorize' })
				.socials.socials--floatleft
					+socials("socials", socials)
			.black-footer__item
				blockquote.blockquote Всегда пишите код так, будто сопровождать его будет склонный к насилию психопат, который знает, где вы живете.
				.blockquote-author — Martin Golding
		.main-footer__copyright © Корепанов Иван | создано с любовью в LoftSchool | 2016